<?xml version="1.0" encoding="utf-8"?>
<net.soulwolf.image.picturelib.view.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pi_picture_choose_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pd_empty_picture"
        android:layout_centerInParent="true" />

    <CheckBox
        android:id="@+id/pi_picture_choose_item_state"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:button="@null"
        android:background="@drawable/pd_checkbox_selector"
        />

</net.soulwolf.image.picturelib.view.SquareLayout>